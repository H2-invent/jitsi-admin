{% extends('bundles/TwigBundle/Exception/errorbase.html.twig') %}


{% block content %}
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body d-flex flex-row align-items-center">
                    <div class="image me-3">
                        {% if theme and getApplicationProperties('FAVORITEBACKGROUND')  %}
                            <img class="d-none d-sm-block" src="{{ getApplicationProperties('FAVORITEBACKGROUND') }}" style="height: 200px; margin-right: 8px; max-width: 400px" alt="Logo">
                        {% else %}
                            {% set rand = (random(2)+1)|number_format %}
                            <img src="{{ image }}">
                        {% endif %}
                    </div>
                    <div class="text">
                        <b style="font-size: 32px; font-weight: bold">{{ exception.statusCode }}
                            - {{ header }}</b>
                        <p>{{ content }}</p>
                        <a class="btn  btn-primary" href="{{ path('index') }}">{{ 'Zur Startseite'|trans }}</a>
                    </div>
                </div>
            </div>

        </div>
    </div>


{% endblock %}
