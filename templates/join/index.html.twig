{% extends 'join/base.html.twig' %}
{% block header %}
    {{ 'Konferenz beitreten'|trans }}
{% endblock %}
{% block content %}


    <div class="offset-sm-1 col-sm-10 offset-lg-2 col-lg-8">
        <p class="text-center text-md-start">
            {{ 'FÃ¼llen Sie das Formular aus um der Konferenz beizutreten'|trans }}
        </p>
        {{ form_start(form) }}
        {{ form_row(form.uid) }}
        {{ form_row(form.email) }}
        {{ form_row(form.name) }}
        <div class="row form-group">
            <div class="col-12">
                {{ include('join/__datenschutz.html.twig',{'server':server,'dataPrivacy':dataPrivacy}) }}
            </div>
        </div>
        <div class="row">
            {% if form.joinBrowser is defined %}
            <div class="col-md-6">
                {{ form_row(form.joinBrowser) }}
            </div>
            {% endif %}
            {% if form.joinApp is defined %}
            <div class="col-md-6 d-none d-md-block">
                {{ form_row(form.joinApp) }}
            </div>
            {% endif %}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
