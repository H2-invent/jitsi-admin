<table style="width: 500px">
    <tbody>
    <tr>
        <td style="padding: 20px" colspan="2">
            <h1>{{ room.name }}</h1>
        </td>
    </tr>
    <tr>
        <td style="width: 250px; padding: 16px">{{ room.agenda?room.agenda: 'Keine Agenda'|trans }}</td>
        <td style="width: 250px"><h3>{{ 'Organisator'|trans }}</h3>{{ room.moderator|nameOfUserNoSymbol }}</td>
    </tr>
    <tr>
        <td>
            <table>
                <tbody>
                <tr>
                    <td style="padding: 16px; width: 125px; vertical-align: top">
                        <h2>{{ 'Geplant'|trans }}:</h2> <p>{{ room.start|date('d.m.Y') }}</p>
                        <p>{{ room.start|date('H:i') }} - {{ room.enddate|date('H:i') }}</p>
                    </td>
                    <td style="padding: 16px; width: 125px; vertical-align: top">
                        <h2>{{ 'Durchgef√ºhrt'|trans }}:</h2>
                        <table>
                            <tbody>
                            {% for s in room.roomstatuses %}
                                <tr>
                                    <td style="padding: 8px">
                                        {{ s.createdAt|date('d.m.Y') }}:
                                        <p>{{ s.createdAt|date('H:i') }} - {{ s.destroyedAt|date('H:i') }} </p>
                                    </td>
                                </tr>

                            {% endfor %}
                            </tbody>
                        </table>
                        <p>
                    </td>
                </tr>
                </tbody>
            </table>

        </td>
        <td style="vertical-align: top">
            <table width="450px">
                <tbody>
                <tr>
                    <td style="padding: 16px; width: 125px; vertical-align: top">
                        <h2>{{ 'Teilnehmerliste'|trans }}</h2>
                    </td>
                </tr>
                {% for u in room.user %}
                    <tr>
                        <td style="padding: 8px">{{ u|nameOfUserNoSymbol }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </td>
    </tr>
    </tbody>
</table>


