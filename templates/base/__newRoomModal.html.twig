<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

        <div class="modal-header  light-blue darken-3 white-text">
            <h5 class="modal-title">{{ title }}</h5>
            <button style="color: white" type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
        </div>
        <div class="modal-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-12">
                    {% if form.repeaterRemoved is defined %}
                        {{ form_row(form.repeaterRemoved) }}
                    {% endif %}
                    {{ form_row(form.server) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-lg-12">
                    {{ form_row(form.agenda) }}
                </div>
                <div class="col-lg-12">
                    {% if form.start is defined %}
                    {% if form.persistantRoom is defined %}
                        {{ form_row(form.persistantRoom) }}
                    {% endif %}
                </div>
                <div class="col-lg-12">
                    <div id="roomStartForm">


                        {% if extra is defined and extra is not null %}
                            <p class="text-danger">{{ extra }}</p>
                        {% endif %}
                        {{ form_row(form.start) }}

                        {% endif %}

                        {{ form_row(form.duration) }}
                    </div>
                </div>

            </div>
            <div class="mb-2">
                <a data-toggle="collapse" class=" caretdown" href="#collapseExample" aria-expanded="false"
                   aria-controls="collapseExample">
                    {{ 'Erweiterte Optionen'|trans }}
                </a>
                <div class="collapse" id="collapseExample">
                    <div class="mt-3">
                        <div class="row">
                            {% if form.scheduleMeeting is defined %}
                                <div class="col-lg-12">
                                    {{ form_row(form.scheduleMeeting) }}
                                </div>
                            {% endif %}
                            <div class="col-lg-12">
                                {{ form_row(form.onlyRegisteredUsers) }}
                            </div>
                            <div class="col-lg-12">
                                {{ form_row(form.public) }}
                            </div>
                            <div id="maxParticipants" class=" collapse">
                                <div class="col-lg-12">
                                    {{ form_row(form.maxParticipants) }}
                                </div>
                                <div class="col-lg-12">
                                    {{ form_row(form.waitinglist) }}
                                </div>
                            </div>

                            <div class="col-lg-12">
                                {{ form_row(form.showRoomOnJoinpage) }}
                            </div>
                            <div id="enableFeateureJwt" class="d-none">
                                <div class="col-lg-12">
                                    {{ form_row(form.dissallowScreenshareGlobal) }}
                                </div>
                                <div class="col-lg-12">
                                    {{ form_row(form.dissallowPrivateMessage) }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
</div>
