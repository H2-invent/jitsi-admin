<ul class="nav navbar-nav">

    <div class="row mr-1">

        <!-- Button trigger modal -->
        <a class="ml-auto mr-2 mr-sm-4"
           data-toggle="modal" data-target="#helpModal">
            {% if theme != false %}
                <img src="{{ asset(theme.iconHelp) }}" class="iconSytle" title="{{ 'Hilfe'|trans }}">
            {% else %}
                <img src="{{ asset('images/question.png') }}" class="iconSytle" title="{{ 'Hilfe'|trans }}">
            {% endif %}

        </a>
        <div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="helpModal"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header  light-blue darken-3 white-text">
                        <h5 class="modal-title" id="exampleModalLabel">{{ 'Hilfe'|trans }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ helpText|raw }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary"
                                data-dismiss="modal">{{ 'Schließen'|trans }}</button>

                    </div>
                </div>
            </div>
        </div>

        <a class="ml-auto mr-2 mr-sm-4"
           data-toggle="modal"
           data-target="#modalAdressbook">
            {% if theme != false %}
                <img src="{{ asset(theme.iconAdressbook) }}" class="iconSytle" title="{{ 'Adressbuch'|trans }}">
            {% else %}
                <img src="{{ asset('images/agenda.png') }}" class="iconSytle" title="{{ 'Adressbuch'|trans }}">
            {% endif %}
        </a>
        {% if laf_CreateServerOpenToEveryone == 1 or (laf_keycloakGroupToCreateServer in app.user.groups) %}
            <a class="ml-auto mr-2 mr-sm-4"
               data-toggle="modal"
               data-target="#settings">
                {% if theme != false %}
                    <img src="{{ asset(theme.iconSettings) }}" class="iconSytle"
                         title="{{ 'Jitsi-Meet-Servereinstellungen'|trans }}">
                {% else %}
                    <img src="{{ asset('images/settings.svg') }}" class="iconSytle"
                         title="{{ 'Jitsi-Meet-Servereinstellungen'|trans }}">
                {% endif %}
            </a>
        {% endif %}
        <!-- Button trigger modal -->
        <a class="ml-auto mr-2 mr-sm-4"
           data-toggle="modal"
           data-target="#sideModalTR">
            {% if theme != false %}
                <img src="{{ asset(theme.iconProfile) }}" class="iconSytle" title="{{ 'Profil'|trans }}">
            {% else %}
                <img src="{{ asset('images/profil.svg') }}" class="iconSytle" title="{{ 'Profil'|trans }}">
            {% endif %}
        </a>


        <li class="nav-item dropdown language-dropdown">
            <a class=" dropdown-toggle ml-auto mr-2 mr-sm-4" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                <img src="{{ asset('/images/locale/'~app.request.locale~'.png') }}" class="iconSytle">
            </a>
            <div class="dropdown-menu language-dropdown-menue" >
                {% if theme == false or (theme is not null and 'de' in theme.profileAllowLanguages  ) %}
                    <a class="dropdown-item" href="{{ path("dashboard", {"_locale": "de"}) }}"><img
                                src="{{ asset('/images/locale/de.png') }}" class="iconSytle" alt="Deutsch"></a>
                {% endif %}
                {% if theme == false  or (theme is not null and 'en' in theme.profileAllowLanguages  ) %}
                    <a class="dropdown-item" href="{{ path("dashboard", {"_locale": "en"}) }}"><img
                                src="{{ asset('/images/locale/en.png') }}" class="iconSytle" alt="English"></a>
                {% endif %}
                {% if theme == false  or (theme is not null and 'fr' in theme.profileAllowLanguages  ) %}
                    <a class="dropdown-item" href="{{ path("dashboard", {"_locale": "fr"}) }}"><img
                                src="{{ asset('/images/locale/fr.png') }}" class="iconSytle" alt="French"></a>
                {% endif %}
                {% if theme == false  or (theme is not null and 'es' in theme.profileAllowLanguages  ) %}
                    <a class="dropdown-item" href="{{ path("dashboard", {"_locale": "es"}) }}"><img
                                src="{{ asset('/images/locale/es.png') }}" class="iconSytle" alt="Español"></a>
                {% endif %}
                {% if theme == false  or (theme is not null and 'vi' in theme.profileAllowLanguages  ) %}
                    <a class="dropdown-item" href="{{ path("dashboard", {"_locale": "vi"}) }}"><img
                                src="{{ asset('/images/locale/vi.png') }}" class="iconSytle" alt="Tiếng Việt"></a>
                {% endif %}
                {% if theme == false  or (theme is not null and 'zh' in theme.profileAllowLanguages  ) %}
                    <a class="dropdown-item" href="{{ path("dashboard", {"_locale": "zh"}) }}"><img
                                src="{{ asset('/images/locale/zh.png') }}" class="iconSytle" alt="中国人"></a>
                {% endif %}

            </div>
        </li>
        <!-- Basic dropdown -->

        <!-- Basic dropdown -->
        {% if theme == false  or (theme is not null and theme.profileAllowLogout == true  ) %}
            <a href="{{ path('app_logout') }}">
                {% if theme != false %}
                    <img src="{{ asset(theme.iconLogout) }}" class="iconSytle" title="{{ 'Logout'|trans }}">
                {% else %}
                    <img src="{{ asset('images/logout.svg') }}" class="iconSytle" title="{{ 'Logout'|trans }}">
                {% endif %}
            </a>
        {% endif %}

    </div>

    <!-- To change the direction of the modal animation change .right class -->
    <!-- Side Modal Top Right -->

</ul>
