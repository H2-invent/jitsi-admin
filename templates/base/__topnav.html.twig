<ul class="nav navbar-nav me-1 flex-row d-flex">


    <!-- Button trigger modal -->
    <a class="ms-auto me-2 me-sm-4"
       data-mdb-toggle="modal" data-mdb-target="#helpModal">
        {% if theme != false %}
            <img src="{{ asset(theme.iconHelp) }}" class="iconSytle" title="{{ 'Hilfe'|trans }}">
        {% else %}
            <img src="{{ asset('images/question.png') }}" class="iconSytle" title="{{ 'Hilfe'|trans }}">
        {% endif %}

    </a>



    {% if laf_CreateServerOpenToEveryone == 1 or (laf_keycloakGroupToCreateServer in app.user.groups) %}
        {% if theme == false or theme.disableAddServer != true %}
            <a class="ms-auto me-2 me-sm-4"
               data-mdb-toggle="modal"
               data-mdb-target="#settings">
                {% if theme != false %}
                    <img src="{{ asset(theme.iconSettings) }}" class="iconSytle"
                         title="{{ 'Jitsi-Meet-Servereinstellungen'|trans }}">
                {% else %}
                    <img src="{{ asset('images/settings.svg') }}" class="iconSytle"
                         title="{{ 'Jitsi-Meet-Servereinstellungen'|trans }}">
                {% endif %}
            </a>
        {% endif %}
    {% endif %}
    <!-- Button trigger modal -->



    <div class="dropdown language-dropdown">
        <a class=" dropdown-toggle ms-auto me-2 me-sm-4" data-mdb-toggle="dropdown"
           aria-haspopup="true" aria-expanded="false">
            <img src="{{ asset('/images/locale/'~app.request.locale~'.png') }}" class="iconSytle">
        </a>
        <div class="dropdown-menu language-dropdown-menue">
            {% if theme == false or (theme is not null and 'de' in theme.profileAllowLanguages  ) %}
