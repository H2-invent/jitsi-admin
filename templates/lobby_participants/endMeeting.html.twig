<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header  light-blue darken-3 white-text">
            <h5 class="modal-title">{{ 'lobby.participant.modal.end.title'|trans }}</h5>
             <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>{{ 'lobby.participant.modal.end.text'|trans }}
            </p>
        </div>
        <div class="modal-footer">

            <a id="closeWindow" class="btn btn-block btn-outline-primary">{{ 'text.continue'|trans }}</a>
            <script>
                document.getElementById("closeWindow").onclick = function () {
                    if (window.opener == null) {
                        window.location.href = "{{ url }}";
                    } else {
                        window.close();
                    }
                };

            </script>
        </div>
    </div>
</div>